@article{https://doi.org/10.1002/wcs.1526,
	author = {Busemeyer, Jerome R. and Kvam, Peter D. and Pleskac, Timothy J.},
	title = {Comparison of Markov versus quantum dynamical models of human decision making},
	journal = {WIREs Cognitive Science},
	volume = {11},
